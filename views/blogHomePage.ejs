<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogger's Hub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="css/blogHomePage.css" rel="stylesheet">
</head>
<body>
    <h1>Blogger's Hub</h1>

    <div class="container left-align">
        <div class="row">
            <div class="card col-3 profileSection">
              <h2>Profile</h2>
              <ul>
                <li>Profile Name: User123</li>
                <li>Contact No: (868) 232-6689</li>
                <li>Email: user@gmail.com</li>
              </ul>
            </div>
          <div class="card col-6 postsSection">
            <h2>Posts</h2>
            <% if (locals.posts) { %>
              <% posts.forEach(element => { %>
                <div class="postCard">
                  <p><%= element %></p>
                  <form action="/removePost" method="post">
                    <button name="index" value="<%= element %>">Delete</button>
                  </form>
                  <form action="/editPost" method="post">
                    <button name="index" value="<%= element %>">Delete</button>
                  </form>
                </div>
                <% }) %>
            <% }else{ %>
              <div class="card">
                <p>No posts from this User</p>
              </div>
            <% } %>
          </div>
          <div class="card col-3 addPostSection">
            <h2>Add Posts</h2>
            <div class="mb-3">
              <label class="form-label">User123</label>
            </div>
            <div class="mb-3">
              <form action="/blogHomePage" method="post">
                <label for="postTextArea" class="form-label">Enter Post</label>
                <input type="text" class="form-control" name="posts" id="postTextArea" rows="3">
                <input type="submit" value="Send">
              </form>
            </div>
          </div>
        </div>
      </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>